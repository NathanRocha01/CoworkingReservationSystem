@model CoworkingReservationSystem.Web.Models.ViewModels.ReservationDetailsViewModel
@{
    ViewData["Title"] = "Detalhes da Reserva";
}

<div class="container">
    <div class="row">
        <div class="col-md-8 mx-auto">
            <div class="card shadow-sm ui-widget-content ui-corner-all">
                <div class="card-header bg-info text-white ui-corner-top">
                    <h3><i class="bi bi-calendar-event"></i> @ViewData["Title"] #@Model.Id</h3>
                </div>
                <div class="card-body">
                    <dl class="row">
                        <dt class="col-sm-4">Sala:</dt>
                        <dd class="col-sm-8">@Model.RoomName (@Model.RoomType)</dd>

                        <dt class="col-sm-4">Data/Hora:</dt>
                        <dd class="col-sm-8">
                            @Model.StartDate.ToString("dd/MM/yyyy HH:mm") às
                            @Model.EndDate.ToString("dd/MM/yyyy HH:mm")
                        </dd>

                        <dt class="col-sm-4">Duração:</dt>
                        <dd class="col-sm-8">@Model.Duration</dd>

                        <dt class="col-sm-4">Status:</dt>
                        <dd class="col-sm-8">
                            <span class="badge bg-@(Model.Status == "Confirmada" ? "success" : "warning")">
                                @Model.Status
                            </span>
                        </dd>

                        @if (!string.IsNullOrEmpty(Model.Notes))
                        {
                            <dt class="col-sm-4">Observações:</dt>
                            <dd class="col-sm-8">@Model.Notes</dd>
                        }
                    </dl>

                    <!-- Ações -->
                    <div class="mt-4">
                        @if (Model.CanEdit)
                        {
                            <a asp-action="Edit" asp-route-id="@Model.Id"
                               class="btn btn-primary ui-button">
                                <i class="bi bi-pencil"></i> Editar
                            </a>
                        }
                        @if (Model.CanCancel)
                        {
                            <form asp-action="Cancel" method="post" class="d-inline">
                                <input type="hidden" name="id" value="@Model.Id" />
                                <button type="submit" class="btn btn-danger ui-button">
                                    <i class="bi bi-x-circle"></i> Cancelar
                                </button>
                            </form>
                        }
                        <a asp-action="Index" class="btn btn-outline-secondary ui-button">
                            <i class="bi bi-list"></i> Minhas Reservas
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>