@model IEnumerable<CoworkingReservationSystem.Web.Models.ViewModels.ReservationViewModel>

@{
    ViewData["Title"] = "Minhas Reservas";
}

<h2>@ViewData["Title"]</h2>

<table class="table table-striped">
    <thead>
        <tr>
            <th>Sala</th>
            <th>Data de Criação da Reserva</th>
            <th>Início</th>
            <th>Término</th>
            <th>Status</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var res in Model)
        {
            <tr>
                <td>@res.RoomId</td>
                <td>@res.ReservationDate.ToString("dd/MM/yyyy")</td>
                <td>@res.StartTime.ToString("HH:mm")</td>
                <td>@res.EndTime.ToString("HH:mm")</td>
                <td>@res.Status</td>
                <td>
                    @if (res.Status == 0)
                    {
                        <form asp-action="Cancel" asp-route-id="@res.Id" method="post" class="d-inline">
                            <button type="submit" class="btn btn-sm btn-warning" title="Cancelar">
                                <span class="bi bi-x-circle"></span> Cancelar
                            </button>
                        </form>
                    }
                </td>
            </tr>
        }
    </tbody>
</table>
