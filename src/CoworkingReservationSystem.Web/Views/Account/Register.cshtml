@model CoworkingReservationSystem.Web.Models.ViewModels.RegisterViewModel
@{
    ViewData["Title"] = "Registrar";
}

<div class="container">
    <div class="row justify-content-center">
        <div class="col-md-8 col-lg-6">
            <div class="card register-card ui-widget ui-widget-content ui-corner-all">
                <div class="card-header bg-success text-white ui-corner-top">
                    <h3 class="text-center"><i class="bi bi-person-plus"></i> Criar Nova Conta</h3>
                </div>
                <div class="card-body">
                    <form id="registerForm" asp-action="Register" method="post">
                        <!-- Nome Completo -->
                        <div class="mb-3">
                            <label asp-for="FullName" class="form-label"></label>
                            <div class="input-group">
                                <span class="input-group-text"><i class="bi bi-person-badge"></i></span>
                                <input asp-for="FullName" class="form-control ui-widget-content" placeholder="Seu nome completo">
                            </div>
                            <span asp-validation-for="FullName" class="text-danger small"></span>
                        </div>

                        <!-- Email -->
                        <div class="mb-3">
                            <label asp-for="Email" class="form-label"></label>
                            <div class="input-group">
                                <span class="input-group-text"><i class="bi bi-envelope"></i></span>
                                <input asp-for="Email" class="form-control ui-widget-content" placeholder="seu@email.com">
                            </div>
                            <span asp-validation-for="Email" class="text-danger small"></span>
                        </div>

                        <!-- Senha -->
                        <div class="mb-3">
                            <label asp-for="Password" class="form-label"></label>
                            <div class="input-group">
                                <span class="input-group-text"><i class="bi bi-lock"></i></span>
                                <input asp-for="Password" type="password" class="form-control ui-widget-content" placeholder="••••••">
                                <button id="toggleRegPassword" type="button" class="btn btn-outline-secondary">
                                    <i class="bi bi-eye"></i>
                                </button>
                            </div>
                            <div class="form-text">Mínimo 6 caracteres</div>
                            <span asp-validation-for="Password" class="text-danger small"></span>
                        </div>

                        <!-- Submit -->
                        <button type="submit" class="btn btn-success w-100 ui-button">
                            <i class="bi bi-person-check"></i> Registrar
                        </button>

                        <!-- Login -->
                        <div class="mt-3 text-center">
                            Já tem uma conta? <a asp-action="Login" class="text-decoration-none">Faça login</a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Styles {
    <style>
        .register-card {
            margin: 5vh auto;
            border: none;
            box-shadow: 0 4px 20px rgba(0,0,0,0.15);
        }
        .form-text {
            font-size: 0.8rem;
            color: #6c757d;
        }
    </style>
}

@section Scripts {
    <script>
        $(function() {
            // Efeitos jQuery UI
            $(".ui-button").button();
            $("#termsLink").button();

            // Mostrar/ocultar senha
            $("#toggleRegPassword").click(function() {
                const passwordField = $("#Password");
                const icon = $(this).find("i");
                
                if (passwordField.attr("type") === "password") {
                    passwordField.attr("type", "text");
                    icon.removeClass("bi-eye").addClass("bi-eye-slash");
                } else {
                    passwordField.attr("type", "password");
                    icon.removeClass("bi-eye-slash").addClass("bi-eye");
                }
            });

            // Validação customizada
            $("#registerForm").validate({
                rules: {
                    FullName: "required",
                    Email: {
                        required: true,
                        email: true
                    },
                    Password: {
                        required: true,
                        minlength: 6
                    },
                    ConfirmPassword: {
                        equalTo: "#Password"
                    },
                    PhoneNumber: {
                        required: true,
                        minlength: 14
                    },
                    AcceptTerms: "required"
                },
                messages: {
                    AcceptTerms: "Você deve aceitar os termos"
                },
                errorClass: "text-danger small",
                errorElement: "span",
                errorPlacement: function(error, element) {
                    if (element.attr("name") === "AcceptTerms") {
                        error.insertAfter(element.parent());
                    } else {
                        error.insertAfter(element);
                    }
                }
            });
        });
    </script>
}