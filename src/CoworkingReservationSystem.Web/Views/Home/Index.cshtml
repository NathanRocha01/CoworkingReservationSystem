@{
    ViewData["Title"] = "Bem-vindo";
}
<div class="container mt-5">
    <div class="row justify-content-center text-center">
        <div class="col-lg-8">
            <h1 class="display-5 fw-bold text-primary mb-4">
                <i class="bi bi-building"></i> Bem-vindo ao CoworkingReservationSystem
            </h1>
            <p class="lead mb-5">
                Sistema de gerenciamento e reserva de salas de reunião.<br/>
                Utilize o menu acima para navegar entre as funcionalidades.
            </p>
            <div class="row g-4">
                @if (SignInManager.IsSignedIn(User))
                {
                        <div class="col-md-4">
                            <div class="card border-primary h-100 hover-shadow">
                                <div class="card-body">
                                    <i class="bi bi-calendar-plus text-primary fs-1 mb-3"></i>
                                    <h5 class="card-title">Nova Reserva</h5>
                                    <p class="card-text">Agende uma sala para sua próxima reunião.</p>
                                    <a asp-controller="Reservation" asp-action="Create" class="btn btn-primary">Reservar</a>
                                </div>
                            </div>
                        </div>
                }
                <div class="col-md-4">
                    <div class="card border-success h-100 hover-shadow">
                        <div class="card-body">
                            <i class="bi bi-door-open text-success fs-1 mb-3"></i>
                            <h5 class="card-title">Nossas Salas</h5>
                            <p class="card-text">Conheça as salas e equipamentos disponíveis.</p>
                            <a asp-controller="Rooms" asp-action="Index" class="btn btn-success">Ver Salas</a>
                        </div>
                    </div>
                </div>
                <div class="col-md-4">
                    <div class="card border-info h-100 hover-shadow">
                        <div class="card-body">
                            <i class="bi bi-calendar-check text-info fs-1 mb-3"></i>
                            <h5 class="card-title">Disponibilidade</h5>
                            <p class="card-text">Verifique salas livres por data e horário.</p>
                            <a asp-controller="Rooms" asp-action="Available" class="btn btn-info">Consultar</a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
