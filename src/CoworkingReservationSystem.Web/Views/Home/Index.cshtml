@using Microsoft.AspNetCore.Identity
@inject SignInManager<IdentityUser> SignInManager
@{
    ViewData["Title"] = "Bem-vindo";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-lg-8 text-center">
            <h1 class="display-4 mb-4 fw-bold text-primary">
                <i class="bi bi-building"></i> Bem-vindo ao CoworkingReservationSystem
            </h1>

            <p class="lead mb-5">
                Sistema de gerenciamento e reserva de salas de reunião.
                Utilize o menu superior para navegar entre as funcionalidades.
            </p>

            <div class="row g-4">
                @if (SignInManager.IsSignedIn(User))
                {
                    <div class="col-md-4">
                        <div class="card h-100 border-primary">
                            <div class="card-body text-center">
                                <i class="bi bi-calendar-plus fs-1 text-primary mb-3"></i>
                                <h5 class="card-title">Nova Reserva</h5>
                                <p class="card-text">Agende uma sala para sua próxima reunião</p>
                                <a asp-controller="Reservation" asp-action="Create" class="btn btn-primary">
                                    Reservar
                                </a>
                            </div>
                        </div>
                    </div>
                }

                <div class="col-md-4">
                    <div class="card h-100 border-success">
                        <div class="card-body text-center">
                            <i class="bi bi-door-open fs-1 text-success mb-3"></i>
                            <h5 class="card-title">Nossas Salas</h5>
                            <p class="card-text">Conheça nossas salas e equipamentos disponíveis</p>
                            <a asp-controller="Rooms" asp-action="Index" class="btn btn-success">
                                Ver Salas
                            </a>
                        </div>
                    </div>
                </div>

                <div class="col-md-4">
                    <div class="card h-100 border-info">
                        <div class="card-body text-center">
                            <i class="bi bi-calendar-check fs-1 text-info mb-3"></i>
                            <h5 class="card-title">Disponibilidade</h5>
                            <p class="card-text">Verifique a disponibilidade das salas por data</p>
                            <a asp-controller="Rooms" asp-action="Available" class="btn btn-info">
                                Consultar
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Styles {
    <style>
        .card {
            transition: transform 0.3s ease, box-shadow 0.3s ease;
        }
        .card:hover {
            transform: translateY(-5px);
            box-shadow: 0 10px 20px rgba(0,0,0,0.1);
        }
    </style>
}